<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <com.kingja.trainingday.ui.SquaredImageView

        android:layout_centerHorizontal="true"
        android:id="@+id/siv_star"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:src="@drawable/svg_sun"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/siv_star"
        android:id="@+id/tv_detail_data"
        style="@style/font_3_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05/22"/>
</RelativeLayout></android.support.v7.widget.CardView>
